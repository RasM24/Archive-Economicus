<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="endroad.dl">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETE" />

	<application
		android:name=".App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme.NoActionBar">
		<activity
			android:name=".SplashScreenActivity"
			android:launchMode="singleInstance"
			android:theme="@style/SplashTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".NewsActivity"
			android:label="@string/nNews"
			android:launchMode="singleInstance" />
		<activity
			android:name=".FactoryActivity"
			android:label="@string/nFactory"
			android:launchMode="singleInstance" />
		<activity
			android:name=".RatingActivity"
			android:label="@string/nRating"
			android:launchMode="singleInstance" />
		<activity
			android:name=".ScheduleActivity"
			android:label="@string/nShedule"
			android:launchMode="singleInstance" />
		<activity
			android:name=".LinkActivity"
			android:label="@string/nLink"
			android:launchMode="singleInstance" />
		<activity
			android:name=".MapActivity"
			android:label="@string/nMap"
			android:launchMode="singleInstance" />
		<activity
			android:name=".FactoryInfoActivity"
			android:theme="@style/Theme.AppCompat.Dialog" />

		<service
			android:name=".messageService"
			android:enabled="true"
			android:stopWithTask="false">
			<intent-filter>
				<action android:name="com.google.firebase.MESSAGING_EVENT" />
			</intent-filter>
		</service>
	</application>

</manifest>